<!-- Contact Section Start -->
<section id="contact" class="py-24" style="
        background-repeat: no-repeat;
        background-image: url('{{ asset('img/contact-illustration.svg') }}');
        background-position: 100% 100%;
        background-blend-mode: lighten">
    <div class="container  bg-white bg-opacity-75 lg:bg-transparent">
        <div class="text-center">
            <h2 class="mb-12 text-4xl text-gray-700 font-bold tracking-wide wow fadeInDown" data-wow-delay="0.3s">{{ 'Contacto' |trans }}</h2>
        </div>

        <div class="flex flex-wrap contact-form-area wow fadeInUp" data-wow-delay="0.4s">
            <div class="w-full md:w-1/2">
                <div class="contact">
                    <h2 class="uppercase font-bold text-xl text-gray-700 mb-5 ml-3">{{ 'Env√≠e su mensaje' | trans }}</h2>
                    {{ form_start(contactForm) }}
                        <div class="flex flex-wrap">
                            <div class="w-full sm:w-1/2 md:w-full lg:w-1/2">
                                <div class="mx-3">
                                    {{ form_widget(contactForm.authorName, {'attr': {
                                        'class': 'form-input rounded-full',
                                        'placeholder': 'Nombre' | trans,
                                        'data-error': 'Por favor, escriba su nombre' | trans
                                        }}) }}
                                </div>
                            </div>
                            <div class="w-full sm:w-1/2 md:w-full lg:w-1/2">
                                <div class="mx-3">
                                    {{ form_widget(contactForm.email, {'attr': {
                                        'class': 'form-input rounded-full',
                                        'placeholder': 'Email' | trans,
                                        'data-error': 'Por favor, escriba su email' | trans
                                    }}) }}
                                </div>
                            </div>
                            <div class="w-full">
                                <div class="mx-3">
                                    {{ form_widget(contactForm.subject, {'attr': {
                                        'class': 'form-input rounded-full',
                                        'placeholder': 'Asunto' | trans,
                                        'data-error': 'Por favor, escriba el asunto de su mensaje' | trans
                                    }}) }}
                                </div>
                            </div>
                            <div class="w-full">
                                <div class="mx-3">
                                    {{ form_widget(contactForm.message, {'attr': {
                                        'class': 'form-input rounded-lg',
                                        'placeholder': 'Su mensaje' | trans,
                                        'data-error': 'Por favor, escriba su mensaje' | trans,
                                        'rows': 5
                                    }}) }}

                                </div>
                            </div>
                            <div class="w-full">
                                <div class="submit-button mx-3">
                                    <button class="btn" id="form-submit" type="submit">{{ 'Enviar mensaje' | trans }}</button>
                                </div>

                            </div>
                            <div class="w-full mt-2 p-3 text-xs text-gray-700 text-center">
                                This site is protected by reCAPTCHA and the Google
                                <a href="https://policies.google.com/privacy">Privacy Policy</a> and
                                <a href="https://policies.google.com/terms">Terms of Service</a> apply.
                            </div>
                        </div>
                    {{ form_end(contactForm) }}
                </div>
            </div>
            <div class="w-full md:w-1/2">
                <div class="ml-3 md:ml-12 wow fadeIn">
                    <h2 class="uppercase font-bold text-xl text-gray-700 mb-5">{{ 'Entre en Contacto' | trans }}</h2>
                    <div>
                        <div class="flex flex-wrap mb-6 items-center">
                            <div class="contact-icon">
                                <i class="lni lni-map-marker"></i>
                            </div>
                            <p class="pl-3">{{ 'Habana' | trans }}, Cuba</p>
                        </div>
                        <div class="flex flex-wrap mb-6 items-center">
                            <div class="contact-icon">
                                <i class="lni lni-envelope"></i>
                            </div>
                            <p class="pl-3">
                                <a href="mailto:cubapoesia@cubarte.cult.cu" class="block">cubapoesia@cubarte.cult.cu</a>
                                {#                                    <a href="#" class="block">tomsaulnier@gmail.com</a>#}
                            </p>
                        </div>
                        {#                            <div class="flex flex-wrap mb-6 items-center">#}
                        {#                                <div class="contact-icon">#}
                        {#                                    <i class="lni lni-phone-set"></i>#}
                        {#                                </div>#}
                        {#                                <p class="pl-3">#}
                        {#                                    <a href="#" class="block">+42 374 5967</a>#}
                        {#                                    <a href="#" class="block">+99 123 5967</a>#}
                        {#                                </p>#}
                        {#                            </div>#}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
